@model IEnumerable<ControleEscolar.Models.Disciplina>

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Disciplinas</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1>Disciplinas</h1>
        <a href="@Url.Action("Create")" class="btn btn-primary mb-3">Cadastrar Disciplina</a>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var disciplina in Model)
                {
                    <tr>
                        <td>@disciplina.Nome</td>
                        <td>
                            <a href="@Url.Action("Edit", new { id = disciplina.Id })" class="btn btn-sm btn-warning" title="Editar">
                                <i class="fa fa-pencil"></i>
                            </a>
                            <form asp-action="Delete" asp-controller="Disciplina" method="post" style="display:inline;" onsubmit="return confirm('Tem certeza que deseja excluir a disciplina @disciplina.Nome?')">
                                <input type="hidden" name="id" value="@disciplina.Id" />
                                <button type="submit" class="btn btn-sm btn-danger" title="Excluir">
                                    <i class="fa fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="3" class="text-center">Nenhuma disciplina cadastrada.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
</body>
</html>
