@model ControleEscolar.Models.Aluno

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Editar Aluno</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1>Editar Aluno</h1>
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Matricula" class="control-label"></label>
                <input asp-for="Matricula" class="form-control" maxlength="10" required/>
                <span asp-validation-for="Matricula" class="text-danger"></span>
                <small class="form-text text-muted">Limite de 10 caracteres.</small>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" maxlength="80" required/>
                <span asp-validation-for="Nome" class="text-danger"></span>
                <small class="form-text text-muted">Limite de 80 caracteres.</small>
            </div>
            <div class="form-group">
                <label asp-for="Endereco" class="control-label"></label>
                <input asp-for="Endereco" class="form-control" maxlength="100" required />
                <span asp-validation-for="Endereco" class="text-danger"></span>
                <small class="form-text text-muted">Limite de 100 caracteres.</small>
            </div>
            <div class="form-group">
                <label asp-for="DataNascimento" class="control-label"></label>
                <input asp-for="DataNascimento" class="form-control" type="date" />
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorMensalidade" class="control-label"></label>
                <input asp-for="ValorMensalidade" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="ValorMensalidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Salvar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</body>
</html>
